@model Final_project_PresentationLayer.Models.Registration_View_Model.ViewProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family Head Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .profile-container {
            margin-top: 50px;
        }
        .profile-section {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }
        .profile-header {
            margin-bottom: 30px;
            text-align: center;
            color: #007bff;
        }
        /* .profile-details {
            margin-bottom: 20px;
        } */
        .profile-details h5 {
            margin-bottom: 10px;
            color: #333;
            font-weight: bold;
        }
        .profile-details p {
            margin-bottom: 20px;
            color: #555;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        .card-header {
            background-color: #007bff;
            color: #fff;
            border-bottom: none;
            border-radius: 10px 10px 0 0;
            font-weight: bold;
        }
        .card-body {
            padding: 20px;
        }
        .card-body p {
            margin-bottom: 15px;
        }
        .img-fluid {
            border-radius: 50%;
        }
        .family-member {
            border-bottom: 1px solid #e9ecef;
            padding: 10px 0;
        }
        .family-member:last-child {
            border-bottom: none;
        }
        .family-member h5 {
            margin: 0;
            color: #333;
        }
        .family-member p {
            margin: 0;
            color: #555;
        }
        media (max-width: 768px) {
            .profile-container {
                margin-top: 30px;
            }
        }
    </style>
</head>
<body>

<div class="container profile-container">
    <div class="row">
        <div class="col-md-12">
            <div class="profile-section">
                <h2 class="profile-header">Family Head Profile</h2>
                <div class="row">
                    <!-- Family Head Details -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                Family Head Details
                            </div>
                            <div class="card-body text-center">
                                <img src="@Model.ProfileImage ?? "https://via.placeholder.com/150"" alt="Profile Image" class="img-fluid mb-3" />
                                <div class="profile-details">
                                    <h5>Name</h5>
                                    <p>@Model.Name</p>
                                </div>
                                <div class="profile-details">
                                    <h5>Email</h5>
                                    <p>@Model.Email</p>
                                </div>
                                <div class="profile-details">
                                    <h5>Phone Number</h5>
                                    <p>@Model.PhoneNumber</p>
                                </div>
                                <div class="profile-details">
                                    <h5>NIN</h5>
                                    <p>@Model.Nin</p>
                                </div>
                                <div class="profile-details">
                                    <h5>Password</h5>
                                    <p>********</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                Additional Information
                            </div>
                            <div class="card-body">
                                <div class="profile-details">
                                    <h5>City</h5>
                                    <p>@Model.City</p>
                                </div>
                                <div class="profile-details">
                                    <h5>Local Government</h5>
                                    <p>@Model.LOcalGovernment</p>
                                </div>
                                <div class="profile-details">
                                    <h5>Postal Code</h5>
                                    <p>@Model.PostalCode</p>
                                </div>
                                <div class="profile-details">
                                    <h5>Address</h5>
                                    <p>@Model.Address</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Family Members Section -->
                <div class="family-members-section">
                    <h3 class="text-center mb-4">Family Members</h3>
                    @if (Model.Families != null && Model.Families.Any())
                    {
                        <div class="row">
                            <div class="col-md-12">
                                @foreach (var member in Model.Families)
                                {
                                    <div class="family-member">
                                        <h5>@member.FirstName @member.LastName</h5>
                                        <p>NIN: @member.Nin</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No family members added yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
@* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script> *@
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

 