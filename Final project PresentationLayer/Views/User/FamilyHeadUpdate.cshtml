<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Family Head Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .profile-container {
            margin-top: 50px;
        }
        .profile-section {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-wrap: wrap;
        }
        .profile-header {
            margin-bottom: 30px;
            text-align: center;
            color: #007bff;
            width: 100%;
        }
        .profile-details, .profile-edit {
            padding: 20px;
        }
        .profile-details {
            flex: 1;
            border-right: 1px solid #dee2e6;
        }
        .profile-edit {
            flex: 2;
        }
        .profile-details h5, .profile-edit h5 {
            margin-bottom: 15px;
            color: #333;
        }
        .profile-details .detail-item {
            margin-bottom: 15px;
        }
        .profile-edit .form-group {
            margin-bottom: 20px;
        }
        .profile-edit .form-control {
            background-color: #e9ecef;
        }
        .save-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .save-btn:hover {
            background-color: #0056b3;
        }
        .add-family-btn {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
        }
        .add-family-btn:hover {
            background-color: #218838;
        }
        .family-member-group {
            background-color: #f1f1f1;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 15px;
        }
        .family-member-header {
            margin-bottom: 10px;
            color: #007bff;
        }
        media (max-width: 768px) {
            .profile-container {
                margin-top: 30px;
            }
            .profile-section {
                flex-direction: column;
            }
            .profile-details, .profile-edit {
                width: 100%;
                padding: 10px;
                border-right: none;
            }
        }
    </style>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Custom JS -->
    <script>
        $(document).ready(function () {
            let familyCount = 3;  // Replace this with your FamilyCount value
            let familyMemberIndex = 0;

            function addFamilyMemberForm() {
                if (familyMemberIndex < familyCount) {
                    familyMemberIndex++;
                    let familyMemberForm = `
                        <div class="family-member-group">
                            <h5 class="family-member-header">Family Member ${familyMemberIndex}</h5>
                            <div class="form-group">
                                <label for="FamilyMembers_${familyMemberIndex}_FirstName">First Name</label>
                                <input type="text" class="form-control" id="FamilyMembers_${familyMemberIndex}_FirstName" name="FamilyMembers[${familyMemberIndex}].FirstName" placeholder="Enter first name" required>
                            </div>
                            <div class="form-group">
                                <label for="FamilyMembers_${familyMemberIndex}_LastName">Last Name</label>
                                <input type="text" class="form-control" id="FamilyMembers_${familyMemberIndex}_LastName" name="FamilyMembers[${familyMemberIndex}].LastName" placeholder="Enter last name" required>
                            </div>
                            <div class="form-group">
                                <label for="FamilyMembers_${familyMemberIndex}_Nin">NIN</label>
                                <input type="text" class="form-control" id="FamilyMembers_${familyMemberIndex}_Nin" name="FamilyMembers[${familyMemberIndex}].Nin" placeholder="Enter NIN">
                            </div>
                        </div>`;
                    $('#family-members-container').append(familyMemberForm);
                } else {
                    alert('You can only add the number of family members equal to the Family Count.');
                }
            }

            $('#add-family-member').click(function () {
                addFamilyMemberForm();
            });
        });
    </script>
</head>
<body>

<div class="container profile-container">
    <div class="row profile-section">
        <!-- Non-editable Fields -->
        <div class="col-md-4 profile-details">
            <h4 class="profile-header">Family Head Details</h4>
            <div class="detail-item">
                <h5>First Name</h5>
                <p>John</p>
            </div>
            <div class="detail-item">
                <h5>Last Name</h5>
                <p>Doe</p>
            </div>
            <div class="detail-item">
                <h5>Family Count</h5>
                <p>3</p>
            </div>
            <div class="detail-item">
                <h5>Phone Number</h5>
                <p>+1234567890</p>
            </div>
            <div class="detail-item">
                <h5>Email</h5>
                <p>john.doe@example.com</p>
            </div>
            <div class="detail-item">
                <h5>NIN</h5>
                <p>1234567890</p>
            </div>
            <div class="detail-item">
                <h5>Password</h5>
                <p>********</p>
            </div>
        </div>

        <!-- Editable Fields -->
        <div class="col-md-8 profile-edit">
            <h4 class="profile-header">Edit Profile</h4>
            <form>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" id="city" name="city" placeholder="Enter city">
                </div>
                <div class="form-group">
                    <label for="localGovernment">Local Government</label>
                    <input type="text" class="form-control" id="localGovernment" name="localGovernment" placeholder="Enter local government">
                </div>
                <div class="form-group">
                    <label for="postalCode">Postal Code</label>
                    <input type="text" class="form-control" id="postalCode" name="postalCode" placeholder="Enter postal code">
                </div>
                <div class="form-group">
                    <label for="profileImage">Profile Image</label>
                    <input type="file" class="form-control-file" id="profileImage" name="profileImage">
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Enter phone number" value="+1234567890">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea class="form-control" id="address" name="address" rows="3" placeholder="Enter address"></textarea>
                </div>

                <!-- Add Family Members -->
                <h5>Family Members</h5>
                <div id="family-members-container"></div>
                <button type="button" class="add-family-btn" id="add-family-member">Add Family Member</button>

                <button type="submit" class="save-btn">Save Changes</button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
@* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script> *@
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
